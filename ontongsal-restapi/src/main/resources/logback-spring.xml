<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!--    <springProperty scope="context" name="LOG_DIR" source="logback.directory" />-->
    <property name="LOG_DIR" value="/var/log/was/ontongsal"/>
    <property name="LOG_PATTERN"
              value="%d{HH:mm:ss.SSS}|%highlight(%-5level)|%X{traceId:-}|%green(%t)|%logger|%blue(\(%F:%L\))|%msg%n"/>

    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="logback-spring-${spring.profiles.active}.xml"/>
</configuration>
